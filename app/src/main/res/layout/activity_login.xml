<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    tools:context=".Activities.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/loginfront">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/login"
            android:layout_marginHorizontal="130dp"
            android:layout_marginVertical="50dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textAlignment="center"
            />
    </LinearLayout>
    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/email_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginfront"
        android:textColorHint="@color/white"
        android:hint="Email Id"
        android:textSize="18sp"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edittext_background"/>

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/password_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_login"
        android:textColorHint="@color/white"
        android:hint="Password"
        android:textSize="18sp"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textAlignment="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edittext_background"/>

    <TextView
        android:id="@+id/forgetPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forget Your Password ?"
        android:textColor="@color/white"
        android:layout_below="@id/password_login"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_marginTop="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/loginBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/orange_button_backgroud"
        android:text="Login"
        android:textColor="@color/white"
        android:layout_below="@id/forgetPass"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="40dp"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/forgetPass"
        android:layout_alignEnd="@+id/loginBtn"
        android:layout_alignBottom="@+id/loginBtn"
        android:layout_gravity="center"
        android:layout_marginTop="53dp"
        android:layout_centerInParent="true"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="10dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/registerBtnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginBtn"
        android:textColor="@color/white"
        android:text="Don't have an account\n    Register Now"
        android:textAlignment="center"
        android:layout_marginTop="20dp"/>


</RelativeLayout>